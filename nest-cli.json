{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "plugins": [
            {
                "name": "@nestjs/swagger/plugin",
                "options": {
                    "dtoFileNameSuffix": [
                        ".dto.ts",
                        ".entity.ts",
                        "-config.ts",
                        "auth-meta.ts",
                        "http-error.ts"
                    ]
                }
            }
        ]
    },
    "generateOptions": {
        "spec": false
    }
}