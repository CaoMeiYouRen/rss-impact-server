{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "declaration": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "removeComments": true,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "incremental": true,
        "skipLibCheck": true,
        "allowJs": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src",
        "test",
        "benchmarks",
        "scripts",
        "*.ts",
        "*.mjs",
        "*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
